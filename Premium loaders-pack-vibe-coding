    <script>
        // --- DATA DE LOS LOADERS ---
        const loaders = [
            { id: 1, type: 'ring', name: 'Cyber Ring', speed: 'Rápido', color: 'Cyan' },
            { id: 2, type: 'dot', name: 'Pulse Dots', speed: 'Medio', color: 'Violet' },
            { id: 3, type: 'bar', name: 'Progress Slide', speed: 'Fluido', color: 'Pink' },
            { id: 4, type: 'ring', name: 'Inner Orbit', speed: 'Lento', color: 'Cyan' },
            { id: 5, type: 'dot', name: 'Binary Wave', speed: 'Rápido', color: 'Violet' },
            { id: 6, type: 'bar', name: 'Stealth Bar', speed: 'Invisible', color: 'Pink' },
            { id: 7, type: 'ring', name: 'Neon Spinner', speed: 'Flash', color: 'Cyan' },
            { id: 8, type: 'dot', name: 'Floating Trio', speed: 'Suave', color: 'Violet' }
        ];

        // --- INYECCIÓN DE GALERÍA ---
        function renderLoaders(filter = 'all') {
            const grid = document.getElementById('loader-grid');
            grid.innerHTML = '';
            
            const filtered = filter === 'all' ? loaders : loaders.filter(l => l.type === filter);
            
            filtered.forEach(loader => {
                const card = document.createElement('div');
                card.className = 'loader-card glass-panel p-6 rounded-2xl flex flex-col items-center justify-between h-48 border border-slate-800';
                
                let loaderHTML = '';
                if (loader.type === 'ring') loaderHTML = '<div class="loader-ring"></div>';
                if (loader.type === 'dot') loaderHTML = '<div class="loader-dots"><div></div><div></div><div></div></div>';
                if (loader.type === 'bar') loaderHTML = '<div class="loader-bar"></div>';

                card.innerHTML = `
                    <div class="flex-1 flex items-center justify-center">${loaderHTML}</div>
                    <div class="text-center">
                        <span class="block text-xs font-mono text-cyan-500 mb-1 uppercase">${loader.speed}</span>
                        <h4 class="text-sm font-bold text-white">${loader.name}</h4>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function filterLoaders(type) {
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('bg-cyan-600', 'text-white');
                btn.classList.add('bg-slate-800', 'text-slate-400');
            });
            event.target.classList.remove('bg-slate-800', 'text-slate-400');
            event.target.classList.add('bg-cyan-600', 'text-white');
            renderLoaders(type);
        }

        // --- CHART CONFIGS ---
        function wrapLabels(labels) {
            return labels.map(label => {
                if (label.length > 16) {
                    const words = label.split(' ');
                    const lines = [];
                    let current = words[0];
                    for(let i=1; i<words.length; i++) {
                        if((current + ' ' + words[i]).length <= 16) {
                            current += ' ' + words[i];
                        } else {
                            lines.push(current);
                            current = words[i];
                        }
                    }
                    lines.push(current);
                    return lines;
                }
                return label;
            });
        }

        const tooltipConfig = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            return Array.isArray(label) ? label.join(' ') : label;
                        }
                    }
                }
            }
        };

        window.onload = () => {
            renderLoaders();

            // Weight Chart
            const wCtx = document.getElementById('weightChart').getContext('2d');
            new Chart(wCtx, {
                type: 'bar',
                data: {
                    labels: wrapLabels(['Vibe Pack (CSS)', 'GIFs Estándar', 'Librería Lottie', 'SVG Animado Ext.']),
                    datasets: [{
                        label: 'Peso en KB',
                        data: [2, 150, 45, 12],
                        backgroundColor: ['#06B6D4', '#1e293b', '#1e293b', '#1e293b'],
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true, grid: { color: '#1e293b' }, ticks: { color: '#64748b' } },
                        x: { grid: { display: false }, ticks: { color: '#64748b' } }
                    },
                    ...tooltipConfig
                }
            });

            // Composition Chart
            const cCtx = document.getElementById('compositionChart').getContext('2d');
            new Chart(cCtx, {
                type: 'doughnut',
                data: {
                    labels: wrapLabels(['Anillos (Orbitals)', 'Puntos (Binary)', 'Barras (Linear)', 'Abstractos (Vibe)']),
                    datasets: [{
                        data: [8, 6, 4, 2],
                        backgroundColor: ['#06B6D4', '#8B5CF6', '#F472B6', '#1e293b'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: { position: 'bottom', labels: { color: '#94a3b8', font: { size: 10 } } }
                    },
                    ...tooltipConfig
                }
            });
        };
    </script>
</body>
