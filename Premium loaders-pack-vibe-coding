        .loader-ring { width: 40px; height: 40px; border: 4px solid #1e293b; border-top: 4px solid var(--cyan); border-radius: 50%; animation: spin 1s linear infinite; }
        .loader-dots { display: flex; gap: 4px; }
        .loader-dots div { width: 10px; height: 10px; background: var(--violet); border-radius: 50%; animation: pulse 1.5s infinite ease-in-out; }
        .loader-dots div:nth-child(2) { animation-delay: 0.2s; }
        .loader-dots div:nth-child(3) { animation-delay: 0.4s; }
        
        .loader-bar { width: 60px; height: 8px; background: #1e293b; position: relative; overflow: hidden; border-radius: 4px; }
        .loader-bar::after { content: ''; position: absolute; width: 40%; height: 100%; background: var(--pink); animation: slide 1.5s infinite linear; }

        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        @keyframes pulse { 0%, 100% { transform: scale(0.5); opacity: 0.5; } 50% { transform: scale(1.2); opacity: 1; } }
        @keyframes slide { 0% { left: -40%; } 100% { left: 100%; } }

        .glass-panel { background: rgba(30, 41, 59, 0.5); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); }
    </style>
